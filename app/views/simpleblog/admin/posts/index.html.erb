<h2> Articles <small> listing </small> </h2>
<%= link_to 'Create new', new_post_path, class: 'btn btn-primary' %>
<br>
<br>

<table class="table table-bordered">
  <thead>
    <tr>
      <th> ID </th>
      <th>Title</th>
      <th>Content</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.id %> </td>
        <td><%= post.title %></td>
        <td><%= post.content.to_s.truncate 200 %></td>
        <td><%= link_to 'Show', post, class: '' %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn-danger btn btn-small' %></td>
      </tr>
    <% end %>

  </tbody>
</table>

